tags: ["software testing" "Frama-C" "LTest"]
homepage: "https://frama-c.com/"
bug-reports: "https://git.frama-c.com/pub/lannotate/-/issues"
depends: [
  "ocaml" {>= "4.14.0"}
  "dune" {> "3.13.0"}
  "frama-c" {>= "31.0~" & < "32.0~"}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
